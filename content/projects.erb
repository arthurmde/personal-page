<h1>Projects</h1>

<% projects.each do |project| %>
  <% project_with_image = !project[:image].nil? && !project[:image].empty? %>
  <hr>
  <div class="row">
    <% if project_with_image %>
      <div class="col-xs-12 col-md-3">
        <a href="<%= project[:link] %>" class="thumbnail">
          <img src="<%= project[:image] %>">
        </a>
      </div>
      <div class="col-xs-12 col-md-9">
        <a href="<%= project[:link] %>">
          <h4><%= project[:name] %></h4>
        </a>
        <%= project[:description] %>
        <small>Atuação: <%= project[:period] %></small>
      </div>
    <% else %>
      <div class="col-xs-12 col-md-12">
        <a href="<%= project[:link] %>">
          <h4><%= project[:name] %></h4>
        </a>
        <%= project[:description] %>
        <small>Atuação: <%= project[:period] %></small>
      </div>
    <% end %>
  </div>
<% end %>


